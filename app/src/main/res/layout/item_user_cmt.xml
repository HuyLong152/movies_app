<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_avt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/tempimg"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/name_cmt"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/img_avt"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/content_cmt"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/name_cmt"
                app:layout_constraintTop_toBottomOf="@+id/name_cmt" />

            <TextView
                android:id="@+id/time_cmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textColor="@color/black"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/name_cmt" />

            <TextView
                android:id="@+id/rate_cmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.436"
                android:textColor="#E30808"
                app:layout_constraintEnd_toEndOf="@+id/img_avt"
                app:layout_constraintStart_toStartOf="@+id/img_avt"
                app:layout_constraintTop_toBottomOf="@+id/img_avt" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>