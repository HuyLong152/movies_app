<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/regisFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".UI.RegisterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="610dp"
            android:layout_height="610dp"
            android:src="@drawable/shape_loggin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/poppins_bold"
            android:text="The Movies App"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find Your Movie"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/edtPass"
            android:layout_width="314dp"
            android:layout_height="55dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/insert_field"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:paddingLeft="50dp"

            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/btnSign"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="314dp"
            android:layout_height="55dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/insert_field"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="Enter Your Email"
            android:inputType="text"
            android:paddingLeft="50dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/edtPass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSign"
            android:layout_width="314dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/in_out_button"
            android:fontFamily="@font/poppins_bold"
            android:text="Sign up"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="58dp"
            android:layout_height="44dp"
            android:layout_marginStart="90dp"
            android:background="@drawable/insert_field"
            android:src="@drawable/google"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton2"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="58dp"
            android:layout_height="44dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/insert_field"
            android:src="@drawable/apple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageButton3"
            app:layout_constraintHorizontal_bias="0.706"
            app:layout_constraintStart_toEndOf="@+id/imageButton" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="58dp"
            android:layout_height="44dp"
            android:layout_marginEnd="90dp"
            android:background="@drawable/insert_field"
            android:src="@drawable/fakebook"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton2"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins"
            android:text="Or sign up with"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/imageButton2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:src="@drawable/mail"
            app:layout_constraintBottom_toBottomOf="@+id/edtEmail"
            app:layout_constraintStart_toStartOf="@+id/edtEmail"
            app:layout_constraintTop_toTopOf="@+id/edtEmail" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:src="@drawable/key"
            app:layout_constraintBottom_toBottomOf="@+id/edtPass"
            app:layout_constraintStart_toStartOf="@+id/edtPass"
            app:layout_constraintTop_toTopOf="@+id/edtPass" />

        <ImageView
            android:id="@+id/iconSee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:src="@drawable/passicon"
            app:layout_constraintBottom_toBottomOf="@+id/edtPass"
            app:layout_constraintEnd_toEndOf="@+id/edtPass"
            app:layout_constraintTop_toTopOf="@+id/edtPass" />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Email"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/edtEmail"
            app:layout_constraintStart_toStartOf="@+id/edtEmail" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Password"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/edtPass"
            app:layout_constraintStart_toStartOf="@+id/edtPass" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="140dp"
            android:fontFamily="@font/poppins_bold"
            android:letterSpacing="0.2"
            android:text="Regis"
            android:textColor="@color/white"
            android:textSize="35dp"
            app:layout_constraintBottom_toTopOf="@+id/edtEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/edtName"
            android:layout_width="314dp"
            android:layout_height="55dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/insert_field"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="Enter Your Name"
            android:inputType="text"
            android:paddingLeft="50dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/edtEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Name"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/edtName"
            app:layout_constraintStart_toStartOf="@+id/edtName" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:src="@drawable/user"
            app:layout_constraintBottom_toBottomOf="@+id/edtName"
            app:layout_constraintStart_toStartOf="@+id/edtName"
            app:layout_constraintTop_toTopOf="@+id/edtName" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>